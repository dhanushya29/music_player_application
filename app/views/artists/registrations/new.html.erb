<%= render 'layouts/display' %>
 <br><h2 style="width:50%;margin-left:350px;font-family:serif;"><b>Artist SignUp</b></h2><br>
  <div style="width:50%;margin-left:200px;margin-top:10px">
    <h2>Artist SignUp</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "artists/shared/error_messages", resource: resource %>
    
    <div class="field form-group">
      <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control",placeholder:"Name" %>
    </div><br />

    <div class="field form-group">
      <%= f.text_field :region, autofocus: true, autocomplete: "region",class:"form-control" ,placeholder:"Region"%>
    </div><br />
    
    <div class="field form-group">
    <%= f.text_field :image_url ,autofocus:true,autocomplete:"image_url",class:"form-control",placeholder:"ImageUrl"%><br />
  </div>


    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Email" %>
    </div><br />

    <div class="field form-group">
      
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control",placeholder:"Password" %><br />
    </div>

    <div class="field form-group">
     
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control",placeholder:"Confirm Password"%><br />
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "artists/shared/links" %>
