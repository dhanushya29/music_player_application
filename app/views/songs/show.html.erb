"<%= render 'layouts/display' %>


<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">

        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <img src="https://www.liveabout.com/thmb/DNPhPFtAm2PDIFbcexbdNY2XG-g=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/pop-music-57bce3863df78c87634ea806.jpg"
                class="rounded-circle img-fluid" style="width: 100px;" />
            </div>
            <h4 class="mb-2"><%= @song.artist.name%></h4>
            <br>
            <% if @song.song_url.present? %>
                <p class="card-text",style= "color:grey;font-size:22px;"><audio src="<%= @song.song_url %>" controls></audio></p>
            <% else %>
                <p class="card-text",style= "color:grey;font-size:22px;"><audio src="https://isaiminisong.com/play.php?file=VGFtaWwgMjAxNSBTb25ncy9OYWFudW0gUm93ZHlkaGFhbi9LYW5uYWFuZSBLYW5uZS5tcDM=&fileid=11839" controls></audio></p>
            <%end%>
            <div class="d-flex justify-content-between text-center mt-5 mb-2">
              <div>
                <p class="mb-2 h5 text-danger"><%= @song.title %></p>
                <p class="text-muted mb-0 text-dark font-weight-bold">Song Title</p>
              </div>
              <div class="px-3">
                <p class="mb-2 h5 text-danger"><%= @song.duration %></p>
                <p class="text-muted mb-0 text-dark font-weight-bold">Song Duration</p>
              </div>
              <div>
                <p class="mb-2 h5 text-danger"><%= @song.lyrics %></p>
                <p class="text-muted mb-0 text-dark font-weight-bold">Song Lyrics</p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>